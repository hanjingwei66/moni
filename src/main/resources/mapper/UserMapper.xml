<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shuojie.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.shuojie.domain.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="firm_id" property="firmId" jdbcType="INTEGER" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="id_number" property="idNumber" jdbcType="CHAR" />
    <result column="affiliation_firm" property="affiliationFirm" jdbcType="VARCHAR" />
    <result column="position" property="position" jdbcType="VARCHAR" />
    <result column="areaname" property="areaname" jdbcType="VARCHAR" />
    <result column="role_id" property="roleId" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, mobile, password, firm_id, username, id_number, affiliation_firm, position, areaname, 
    role_id
  </sql>

  <!--忘记密码-->
  <update id="updateUserPassworld" parameterType="com.shuojie.domain.User"  >
      update user set password = #{password} where mobile = #{ mobile}
  </update>
    <select id="getUserByMobile" resultMap="BaseResultMap" parameterType="com.shuojie.domain.User">
      select * from user where mobile = #{mobile}
    </select>
  <!--登录-->
  <select id="toLogin" resultMap="BaseResultMap" parameterType="com.shuojie.domain.User">
    select * from user where mobile = #{mobile} and password = #{password}
  </select>
  <!--注册-->
  <insert id="register" parameterType="com.shuojie.domain.User">
    insert into user (mobile,password,firm_id,username,id_number,affiliation_firm,position,areaname)
    values (#{mobile},#{password},#{firmId},#{username},#{idNumber},#{affiliationFirm},#{position},#{areaname})
  </insert>
  <!--查询全部-->
  <select id="selectUser" resultMap="BaseResultMap" parameterType="com.shuojie.domain.User">
    select * from user
  </select>
</mapper>